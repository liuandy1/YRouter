<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/library1Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lib1_activity"
        app:layout_constraintBottom_toTopOf="@+id/library2Activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/library2Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lib2_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/library1Activity" />

</androidx.constraintlayout.widget.ConstraintLayout>